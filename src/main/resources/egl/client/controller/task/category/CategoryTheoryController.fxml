<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<GridPane fx:controller="egl.client.controller.task.category.CategoryTheoryController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextArea fx:id="descriptionTextArea" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <TableView fx:id="translationsTableView" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <columns>
            <TableColumn fx:id="sourceTableColumn" text="Оригинал"/>
            <TableColumn fx:id="targetTableColumn" text="Перевод"/>
        </columns>
    </TableView>

    <Button fx:id="finishButton" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
</GridPane>